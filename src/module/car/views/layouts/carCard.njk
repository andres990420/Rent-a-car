<div class="card-image">
    <figure class="image is-16by9">
        <img
            src="https://bulma.io/assets/images/placeholders/640x480.png"
            alt="Placeholder image"
        />
    </figure>
</div>
<div class="card-content">
    <div class="content">
        <div class="attributes">
            <div class="attribute">
                <span class="icon has-text-danger"><i class="fas fa-tachometer-alt"></i></span>
                <p>
                    <strong class="has-text-danger">Kilometraje:</strong> 
                    {{car.mileage}} KM
                </p>
            </div>
            <div class="attribute">
                <span class="icon has-text-danger"><i class="fas fa-palette"></i></span>
                <p>
                    <strong class="has-text-danger">Color:</strong> {{car.color}}
                </p>
            </div>
            <div class="attribute">
                <span class="icon has-text-danger"><i class="fas fa-snowflake"></i></span>
                <p>
                    <strong class="has-text-danger">Aire Acondicionado:</strong> 
                    {% if car.ac === false %}
                    No
                    {% else %}
                    Si
                    {% endif %}
                </p>
            </div>
            <div class="attribute">
                <span class="icon has-text-danger"><i class="fas fa-users"></i></span>
                <p>
                    <strong class="has-text-danger">Capacidad:</strong> 
                    {{car.capacity}} pasajeros
                </p>
            </div>
            <div class="attribute">
                <span class="icon has-text-danger"><i class="fas fa-cogs"></i></span>
                <p>
                    <strong class="has-text-danger">Transmisi√≥n:</strong>
                    {{car.transmission}}
                </p>
            </div>
        </div>
    </div>
</div>